.footer {
    background: $black4;
    max-height: 370px;
}

.footer__container {
    display: flex;
    justify-content: space-between;
    height: 100%;
    padding: 80px 0;
}

.footer__copyright {
    width: 33.3%;
}
  
.footer__content {
    width: 66.6%;
}

.footer__menu {
    margin-bottom: 70px;
}

.footer__text {
    margin-bottom: 25px;
}

.footer__content-columns {
    display: inline-flex;
}

.footer__text-author {
    color: $white;
    font-style: italic;
}