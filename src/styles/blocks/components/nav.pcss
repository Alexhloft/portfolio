.nav {
  color: $white;
}

.nav__list {
  display: flex;
  align-items: center;
}

.nav__link {
  display: block;
  padding: 50px 30px;
  border-bottom: 3px solid transparent;
  transition: border-color .2s;

  &:hover {
    color: $orange5;
    font-weight: 600;
    border-color: $orange5;
  }

  &:after {
    content: attr(title);
    display: block;
    height: 0;
    font-weight: 600;
    overflow: hidden;
    visibility: hidden;
  }
}