    //     height: 580px;
    //     background: linear-gradient(-180deg,transparent,#1b1f22 50%);
    //     background-size: cover;
    // }
}

.parallax__layer {
   position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    will-change: transform;

    &:nth-child(1) {
        .parallax__layer-img {
            top: 0;
        }
    }
    &:nth-child(2) {
        .parallax__layer-img {
            top: 320px;
        }
    }
    &:nth-child(3) {
        .parallax__layer-img {
            top: 420px;
        }
    }
    &:nth-child(4) {
        .parallax__layer-img {
            top: 760px;

        }
    }
}

.parallax__layer-img {
    max-width: none;
    max-height: none;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
}