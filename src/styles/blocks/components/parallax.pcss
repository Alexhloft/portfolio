.parallax {
    height: 180vh;
    width: 100%;
    overflow: hidden;
    position: absolute;

    @include tablets {
        display: none;
    }
}

.parallax__inner {
    position: relative;
    min-height: 1200px;
    height: 100%;
    overflow: hidden;
    
